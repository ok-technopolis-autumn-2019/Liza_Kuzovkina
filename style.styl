white = #FFFFFF
black = #000000
green = #5DC2AF
dark_text = #666666
light_text = #CCCCCC
action-bar_text = #888888
line = #E6E6E6
hover = #FAFAFA
background = #F2F2F2
rgba_fun = rgba(0, 0, 0, 0.2)

circle = url("icons/circle.svg")
checked = url("icons/checked.svg")
arrow_down = url("icons/arrow_down.svg")
delete_icon = url("icons/delete.svg")
font = 'Roboto', 'Arial', sans-serif

body
  background-color background
  font-family font
  color dark_text
  margin 0
  padding 0

ul
  list-style none
  margin 0 0 50px 0
  padding 0

input[type="text"]::placeholder
  color light_text
  font-style italic
  background-color transparent

input[type="text"]
  color black
  padding 10px

button
  border none
  background-color transparent

.todo-app__header
  margin-top 100px
  text-align center
  font-style normal
  font-size 40px
  line-height 1
  color light_text

.title
  margin 0
  font-weight 200

.todo-app__frame
  display flex
  flex-direction column
  align-items center
  justify-content center

.main-controls
  display flex
  height 56px
  box-sizing border-box
  border-bottom 1px line solid
  width 100%

.main-controls__select-all-buttons
  margin 20px 0  0 16px
  text-indent -9999px
  background-image arrow_down
  background-repeat no-repeat
  height 63%
  padding 0

.main-controls__create-new
  flex-grow 1

.main-controls__create-new-input
  width 100%
  height 55px
  box-sizing border-box
  border none
  font-size 24px

.action-bar
  display flex
  justify-content space-between
  align-items center
  font-size 14px
  color action-bar_text
  height 40px
  box-sizing border-box
  border-top 1px line solid
  width 100%

.task-filter
  display flex
  flex-direction row
  justify-content center

.task-item__delete
  flex-shrink 0
  height 20px
  text-indent -9999px
  background-image delete_icon
  background-repeat no-repeat
  opacity 0
  margin 20px 20px 0 0
  width 20px

.task-item
  box-sizing border-box
  border-bottom 1px line solid

.task-item__input
  height 56px
  width 100%
  font-size 24px
  box-sizing border-box

.task-item__view
  display flex
  width 100%

.task-item__view:hover
  background-color hover

.task-item__view:hover .task-item__delete:hover
  opacity 1

.tasks:empty
  display flex
  align-items center
  justify-content center

.task-item__text
  display flex
  flex-grow 1
  padding 15px 0
  word-break break-word
  font-size 24px

.task-item__status:checked ~ .task-item__text
  color light_text
  text-decoration line-through

.todo-app__tasks
  background-color white
  width 100%

.todo-app
  position relative
  max-width 550px
  min-width 500px
  margin 0 auto

.todo-app__frame
  position relative
  background-color white
  z-index 1
  box-shadow 0 2px 4px rgba_fun

.task-filter__item
  flex-shrink 0
  width auto
  height auto
  box-sizing border-box

.task-filter__text
  padding 2px 10px 2px 10px

.task-filter__input:checked ~ .task-filter__text
  border 1px line solid
  border-radius 10%
  background-color white

.task-filter__input
  width 35px
  height 0
  margin-left -35px
  opacity 0

.task-clear-completed
  margin-right 8px
  border 0
  font-size 14px
  color action-bar_text
  font-family font

.task-counter
  margin-left 15px

.todo-app:before
  content ''
  position absolute
  top 100%
  left 2px
  right 2px
  height 5px
  z-index -1
  background-color white
  box-shadow 0 2px 4px rgba_fun

.todo-app:after
  content ''
  position absolute
  top 100%
  left 4px
  right 4px
  height 9px
  z-index -2
  background-color white
  box-shadow 0 2px 4px rgba_fun

.task-item__status-label
  flex-shrink 0
  width 36px
  height 36px
  box-sizing border-box
  margin 10px 10px 10px 10px
  background-image circle
  background-repeat no-repeat
  color transparent
  border-radius 45%

.task-item__status:checked + .task-item__status-label
  background-image checked
  background-position 5px 5px
  border 2px green solid
  background-repeat no-repeat

.task-item__status
  position absolute
  opacity 0
